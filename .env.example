# ============================================================
# OutfAI — environment variable template
# Copy this file to .env.local and fill in your values.
# NEVER commit .env.local to git.
# ============================================================

# ------------------------------------------------------------
# Database
# When running via Docker Compose the host is "db" (service name).
# When running natively against Supabase local, use 127.0.0.1:54322.
# ------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/outfai

# ------------------------------------------------------------
# Supabase (hosted project — leave blank for local Postgres only)
# ------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ------------------------------------------------------------
# Auth (NextAuth / Supabase Auth)
# ------------------------------------------------------------
NEXTAUTH_SECRET=change-me-to-a-random-32-char-string
NEXTAUTH_URL=http://localhost:3000

# ------------------------------------------------------------
# Weather API
# Open-Meteo is free and requires no key.
# Uncomment if you switch to OpenWeatherMap.
# ------------------------------------------------------------
# OPENWEATHERMAP_API_KEY=

# ------------------------------------------------------------
# Postgres overrides (used by docker-compose.prod.yml)
# ------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=outfai
